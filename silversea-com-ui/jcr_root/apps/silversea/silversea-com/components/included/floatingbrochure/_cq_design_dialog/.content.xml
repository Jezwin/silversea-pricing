<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Floating Brochure (Design)"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <field
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/fieldset"
                        name="./items">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            method="absolute"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <showFloatingBrochure
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldLabel="Show/Hide Floating Brochure"
                                        name="./showFloatingBrochure">
                                        <items jcr:primaryType="nt:unstructured">
                                            <show
                                                jcr:primaryType="nt:unstructured"
                                                text="Show"
                                                value="{Boolean}true"/>
                                            <hide
                                                jcr:primaryType="nt:unstructured"
                                                text="Hide"
                                                value="{Boolean}false"/>
                                        </items>
                                    </showFloatingBrochure>
                                    <bottomPadding
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                        fieldDescription="Enter Bottom Padding"
                                        fieldLabel="Bottom Padding"
                                        name="./bottomPadding"/>
                                    <scrollTop
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                        fieldDescription="Enter amount to be scrolled before this component can be seen"
                                        fieldLabel="Scroll top amount"
                                        name="./scrollTop"/>
                                    <image
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                        fieldDescription="Enter Image path"
                                        fieldLabel="Image"
                                        name="./image"
                                        rootPath="/content/dam"/>
                                    <whitelistcssselector
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/multifield"
                                        fieldDescription="Enter a list of class names (without the starting dot) for which the floating brochure must be displayed on the page. Blank here means it would be displayed for the whole page."
                                        fieldLabel="Whitelist for CSS Selectors">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                            name="./whitelistSelector"
                                            required="{Boolean}false"/>
                                    </whitelistcssselector>
                                    <blacklistcssselector
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/multifield"
                                        fieldDescription="Enter a list of class names (without the starting dot) for which the floating brochure must be hidden from the page. Blank here means it would be hidden for the whole page."
                                        fieldLabel="Blacklist for CSS Selectors">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                            name="./blacklistSelector"
                                            required="{Boolean}false"/>
                                    </blacklistcssselector>
                                </items>
                            </column>
                        </items>
                    </field>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
