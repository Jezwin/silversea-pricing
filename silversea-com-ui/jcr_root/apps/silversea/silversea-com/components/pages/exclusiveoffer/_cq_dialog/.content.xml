<?xml version="1.0" encoding="UTF-8"?>
<jcr:root
    xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="SSC - Exclusive Offer">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <exclusiveoffer
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Exclusive Offer"
                        cq:showOnCreate="{Boolean}false"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false" />
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <longdescription
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        allowBulkEdit="{Boolean}true"
                                        cq-msm-lockable="longDescription"
                                        fieldLabel="Long description"
                                        name="./longDescription" />
                                    <mapoverhead
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        allowBulkEdit="{Boolean}true"
                                        cq-msm-lockable="mapOverhead"
                                        fieldLabel="Map overhead"
                                        name="./mapOverhead" />
                                    <lightboxreference
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                        allowBulkEdit="{Boolean}true"
                                        cq-msm-lockable="lightboxReference"
                                        fieldLabel="Lightbox"
                                        rootPath="/content/silversea-com"
                                        name="./lightboxReference" />
                                    <cruisefareadditions
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/multifield"
                                        cq-msm-lockable="cruisefareadditions"
                                        fieldLabel="Cruise fare additions"
                                        renderReadOnly="{Boolean}true">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Cruise fare addition"
                                            name="./addition"
                                            rootPath="/content/silversea-com/" />
                                    </cruisefareadditions>
                                    <termandcondition
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textarea"
                                        allowBulkEdit="{Boolean}true"
                                        cq-msm-lockable="termAndCondition"
                                        fieldLabel="Exclusive offer Terms &#38; Condition"
                                        name="./termAndCondition" />
                                    <exclusiveOfferId
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        allowBulkEdit="{Boolean}true"
                                        cq-msm-lockable="exclusiveOfferId"
                                        fieldLabel="ID"
                                        disabled="{Boolean}true"
                                        name="./exclusiveOfferId" />
                                    <startdate
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/datepicker"
                                        allowBulkEdit="{Boolean}true"
                                        cq-msm-lockable="startDate"
                                        fieldLabel="Start date"
                                        disabled="{Boolean}true"
                                        name="./startDate" />
                                    <enddate
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/datepicker"
                                        allowBulkEdit="{Boolean}true"
                                        cq-msm-lockable="endDate"
                                        fieldLabel="End Date"
                                        disabled="{Boolean}true"
                                        name="./endDate" />
                                </items>
                            </column>
                        </items>
                    </exclusiveoffer>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
