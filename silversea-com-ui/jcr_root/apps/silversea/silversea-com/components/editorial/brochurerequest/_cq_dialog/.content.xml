<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="SSC - Brochure Request"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
         <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav" />
            <items jcr:primaryType="nt:unstructured">
                <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <rootPage
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                            fieldDescription="Path"
                            fieldLabel="Thank you page"
                            name="./pageReference"
                            rootPath="/content/silversea-com" />
                        <tags
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="cq/gui/components/common/tagspicker"
                            fieldLabel="Countries excluded"
                            name="./cq:tags" />
                            <typeForm
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                allowBulkEdit="{Boolean}true"
                                cq-msm-lockable="modalSize"
                                fieldLabel="Modal size"
                                name="./typeForm"
                                renderReadOnly="{Boolean}true"
                                value="online-form"
                                defaultValue="online-form"
                                required="{Boolean}true">
                                <items jcr:primaryType="cq:WidgetCollection">
                                    <online
                                        jcr:primaryType="nt:unstructured"
                                        text="online form"
                                        value="online-form" />
                                    <printed
                                        jcr:primaryType="nt:unstructured"
                                        text="printed form"
                                        value="printed-form" />


                                        </items>
                                    </typeForm>
                    </items>
                </column>
                
            </items>
    </content>
</jcr:root>