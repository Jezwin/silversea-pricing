<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="SSC - Brochure Request"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav" />
        <items jcr:primaryType="nt:unstructured">
            <brochurerequest
                jcr:primaryType="nt:unstructured"
                jcr:title="Brochure request"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false" />
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <rootPage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="Path"
                                fieldLabel="Thank you page"
                                name="./pageReference"
                                rootPath="/content/silversea-com" />
                            <tags
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/common/tagspicker"
                                fieldLabel="Countries excluded"
                                name="./cq:tags" />
                                <typeForm
                                    cr:primaryType="nt:unstructured"
                                    jcr:title="Type Form"
                                    fieldLabel="Type Form"
                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                    emptyText="Select a form type"
                                    name="./typeForm">
                                    <items
                                        jcr:primaryType="nt:unstructured">
                                        <selectform
                                            jcr:primaryType="nt:unstructured"
                                            text="Please select a form type"
                                            value="online-form"/>
                                            <online
                                                jcr:primaryType="nt:unstructured"
                                                text="Online form"
                                                value="online-form"/>
                                            <printed
                                                jcr:primaryType="nt:unstructured"
                                                text="printed form"
                                                value="printed-form"/>
                                    </items>
                                </typeForm>
                        </items>
                    </column>
                </items>
            </brochurerequest>
        </items>
    </content>
</jcr:root>