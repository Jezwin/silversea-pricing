<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="SSC - Slider"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav" />
        <items jcr:primaryType="nt:unstructured">
            <slider
                jcr:primaryType="nt:unstructured"
                jcr:title="Slider"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false" />
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <itemNumber
                                jcr:primaryType="nt:unstructured"
                                fieldLabel="Item(s) per slide"
                                fieldDescription="Allow to set how many element sould be in each slide in big viewport. Default : 1"
                                min="1"
                                name="./itemNumber"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield" />
                            <autoPlay
                                jcr:primaryType="nt:unstructured"
                                text="Auto scroll"
                                fieldDescription="Slide will scroll every 5 seconds automatically"
                                name="./autoPlay"
                                value="true"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox" />
                            <style
                                jcr:primaryType="nt:unstructured"
                                fieldLabel="Style"
                                fieldDescription="Default : Style 1"
                                name="./style"
                                sling:resourceType="granite/ui/components/foundation/form/select">
                                <items jcr:primaryType="nt:unstructured">
                                    <style1
                                        jcr:primaryType="nt:unstructured"
                                        text="White arrows (white arrow, dot pagination)"
                                        value="style1" />
                                    <style2
                                        jcr:primaryType="nt:unstructured"
                                        text="Black arrows (black arrow, no pagination)"
                                        value="style2" />
                                    <style3
                                        jcr:primaryType="nt:unstructured"
                                        text="Bottom navigation (white arrow align to bottom, dot pagination)"
                                        value="style3" />
                                </items>
                            </style>
                            <transition
                                jcr:primaryType="nt:unstructured"
                                fieldLabel="Transition"
                                fieldDescription="Default : Slide"
                                name="./transition"
                                sling:resourceType="granite/ui/components/foundation/form/select">
                                <items jcr:primaryType="nt:unstructured">
                                    <slide
                                        jcr:primaryType="nt:unstructured"
                                        text="Slide"
                                        value="slide" />
                                    <fade
                                        jcr:primaryType="nt:unstructured"
                                        text="Fade"
                                        value="fade" />
                                </items>
                            </transition>
                            <firstSlideOnly
                                jcr:primaryType="nt:unstructured"
                                text="First slide only"
                                fieldDescription="Displays first slide only in small viewport"
                                name="./firstSlideOnly"
                                value="true" 
                                sling:resourceType="granite/ui/components/foundation/form/checkbox" />
                            <fullWidth
                                jcr:primaryType="nt:unstructured"
                                text="Full width"
                                name="./fullWidth"
                                value="true" 
                                sling:resourceType="granite/ui/components/foundation/form/checkbox" />
                        </items>
                    </column>
                </items>
            </slider>
        </items>
    </content>
</jcr:root>