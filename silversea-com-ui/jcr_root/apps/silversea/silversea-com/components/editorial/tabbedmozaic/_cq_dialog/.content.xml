<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="SSC - Tabbed Mozaic"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            margin="{Boolean}false"
            type="nav" />
        <items jcr:primaryType="nt:unstructured">
            <tabbedmozaic
                jcr:primaryType="nt:unstructured"
                jcr:title="Global options"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false" />
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                       		<uuid
                                jcr:primaryType="nt:unstructured"
                                name="./jcr:mixinTypes"
                                value="mix:referenceable"
                                sling:resourceType="granite/ui/components/foundation/form/hidden" />
                            <image
                                jcr:primaryType="nt:unstructured"
                                fieldLabel="Image"
                                name="./assetReference"
                                required="{Boolean}true"
                                rootPath="/content/dam/silversea-com"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser" />
                            <title
                                jcr:primaryType="nt:unstructured"
                                fieldLabel="Title"
                                name="./jcr:title"
                                required="{Boolean}true"
                                sling:resourceType="granite/ui/components/foundation/form/textfield" />
                            <targetpath
                                jcr:primaryType="nt:unstructured"
                                fieldLabel="URL"
                                name="./reference"
                                rootPath="/content/silversea-com"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser" />
                        </items>
                    </column>
                </items>
            </tabbedmozaic>
            <desktopOptions
                jcr:primaryType="nt:unstructured"
                jcr:title="Desktop options"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false" />
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <desktopHeight
                                jcr:primaryType="nt:unstructured"
                                fieldLabel="Height"
                                fieldDescription="Set custom heigth > 0 (px) to the component. height = 0 means no value."
                                name="./desktopHeight"
                                defaultValue = "0"
                                min="0"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield" />
                        </items>
                    </column>
                </items>
            </desktopOptions>
        </items>
    </content>
</jcr:root>