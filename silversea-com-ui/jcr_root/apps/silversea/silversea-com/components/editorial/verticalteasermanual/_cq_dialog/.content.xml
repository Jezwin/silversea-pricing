<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="SSC - Vertical teaser manual"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            margin="{Boolean}false"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <verticalteasermanual
                jcr:primaryType="nt:unstructured"
                jcr:title="Global options"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <type
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Type"
                                name="./type">
                                <items jcr:primaryType="nt:unstructured">
                                    <default
                                        jcr:primaryType="nt:unstructured"
                                        text="Default"
                                        value=""/>
                                    <defaultnew
                                        jcr:primaryType="nt:unstructured"
                                        text="Default new"
                                        value="defaultnew"/>
                                    <allInclusive
                                        jcr:primaryType="nt:unstructured"
                                        text="OB All Inclusive style"
                                        value="allInclusive"/>
                                    <finedine
                                        jcr:primaryType="nt:unstructured"
                                        text="Fine Dining style"
                                        value="finedine"/>
                                    <accomodation
                                        jcr:primaryType="nt:unstructured"
                                        text="OB Accommodation Style"
                                        value="obaccomodation"/>
                                </items>
                            </type>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Title"
                                name="./jcr:title"
                                required="{Boolean}true"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldLabel="Description"
                                name="./jcr:description"/>
                            <ctalabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="CTA Label (new default)"
                                name="./ctalabel"/>
                            <image
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldLabel="Image"
                                name="./assetReference"
                                rootPath="/content/dam/silversea-com"/>
                            <targetpath
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldLabel="Target path"
                                name="./reference"
                                rootPath="/content/silversea-com"/>
                            <openModal
                                jcr:primaryType="nt:unstructured"
                                text="Enable lightbox"
                                name="./openModal"
                                value="true"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox" />
                        </items>
                    </column>
                </items>
            </verticalteasermanual>
            <verticalteasermanualDesktop
                jcr:primaryType="nt:unstructured"
                jcr:title="Desktop options"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heightDesktop
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                defaultValue="230"
                                fieldDescription="Set box min-height"
                                fieldLabel="Min height"
                                min="0"
                                name="./heightDesktop"/>
                           <imageHeightDesktop
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                fieldDescription="Image height"
                                fieldLabel="Image height"
                                defaultValue="250"
                                min="0"
                                name="./imageHeightDesktop"/>
                           <showBorderDesktop
                                jcr:primaryType="nt:unstructured"
                                text="Show border"
                                name="./showBorderDesktop"
                                value="true"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox" />
                           
                        </items>
                    </column>
                </items>
            </verticalteasermanualDesktop>
            <verticalteasermanualMobile
                jcr:primaryType="nt:unstructured"
                jcr:title="Mobile options"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heightMobile
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                fieldDescription="Set box min-height"
                                fieldLabel="Min height"
                                 name="./heightMobile"/>
                             <imageHeightMobile
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                fieldDescription="Image height"
                                fieldLabel="Image height"
                                defaultValue="250"
                                min="0"
                                name="./imageHeightMobile"/>
                             <showBorderMobile
                                jcr:primaryType="nt:unstructured"
                                text="Show border"
                                name="./showBorderMobile"
                                value="true"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox" />
                            
                        </items>
                    </column>
                </items>
            </verticalteasermanualMobile>
        </items>
    </content>
</jcr:root>
