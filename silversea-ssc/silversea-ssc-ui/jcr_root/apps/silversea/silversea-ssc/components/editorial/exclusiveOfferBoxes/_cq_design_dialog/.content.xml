<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="SSC - Exclusive Offer Boxes"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Title - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            margin="{Boolean}false"/>
         <items jcr:primaryType="nt:unstructured">
			<main 
			    jcr:primaryType="nt:unstructured"
			    jcr:title="Main options"
			    sling:resourceType="granite/ui/components/foundation/section">
		    	<layout
		        	jcr:primaryType="nt:unstructured"
                    active="{Boolean}true"
		        	sling:resourceType="granite/ui/components/foundation/layouts/tabs" />
		        <items jcr:primaryType="nt:unstructured">
		            <desktop
		               jcr:primaryType="nt:unstructured"
		               jcr:title="Global Desktop options"
		               sling:resourceType="granite/ui/components/foundation/container">
		                 <layout jcr:primaryType="nt:unstructured"
		                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
		                 <items jcr:primaryType="nt:unstructured">
		                    <column jcr:primaryType="nt:unstructured"
		                            sling:resourceType="granite/ui/components/foundation/container">
		                        <items jcr:primaryType="nt:unstructured">
									<cssDesktop
									    jcr:primaryType="nt:unstructured"
									    sling:resourceType="granite/ui/components/foundation/form/textarea"
									    fieldLabel="Custom global css desktop"
									    rows="20"
									    fieldDescription="Custom global css only desktop"
									    name="./cssDesktop" />
		                        </items>
		                    </column>
		                </items>
		            </desktop>
		            <tablet
		               jcr:primaryType="nt:unstructured"
		               jcr:title="Global Tablet options"
		               sling:resourceType="granite/ui/components/foundation/container">
		                 <layout jcr:primaryType="nt:unstructured"
		                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
		                 <items jcr:primaryType="nt:unstructured">
		                    <column jcr:primaryType="nt:unstructured"
		                            sling:resourceType="granite/ui/components/foundation/container">
		                        <items jcr:primaryType="nt:unstructured">
									<cssTablet
									    jcr:primaryType="nt:unstructured"
									    sling:resourceType="granite/ui/components/foundation/form/textarea"
									    fieldLabel="Custom global css tablet"
									    rows="20"
									    fieldDescription="Custom global css only tablet"
									    name="./cssTablet" />
		                        </items>
		                    </column>
		                </items>
		            </tablet>
		            <mobile
		               jcr:primaryType="nt:unstructured"
		               jcr:title="Global Mobile options"
		               sling:resourceType="granite/ui/components/foundation/container">
		                 <layout jcr:primaryType="nt:unstructured"
		                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
		                 <items jcr:primaryType="nt:unstructured">
		                    <column jcr:primaryType="nt:unstructured"
		                            sling:resourceType="granite/ui/components/foundation/container">
		                        <items jcr:primaryType="nt:unstructured">
									<cssMobile
									    jcr:primaryType="nt:unstructured"
									    sling:resourceType="granite/ui/components/foundation/form/textarea"
									    fieldLabel="Custom global css mobile"
									    rows="20"
									    fieldDescription="Custom global css only mobile"
									    name="./cssMobile" />
		                        </items>
		                    </column>
		                </items>
		            </mobile>
		        </items>
			</main>		            
        </items>
    </content>
</jcr:root>
