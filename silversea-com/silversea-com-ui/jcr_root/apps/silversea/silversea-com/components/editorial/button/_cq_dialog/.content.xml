<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="SSC - Button"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav" />
        <items jcr:primaryType="nt:unstructured">
            <button
                jcr:primaryType="nt:unstructured"
                jcr:title="Button"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false" />
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Desktop Title"
                                name="./title"
                                required="{Boolean}true" />
                            <titletablet
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Tablet Title"
                                name="./titleTablet" />
                            <url
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldLabel="Url"
                                name="./reference"
                                required="{Boolean}true"
                                rootPath="/content/silversea-com" />
                            <videoUrl
                                jcr:primaryType="nt:unstructured"
                                fieldLabel="Video Url"
                                name="./videoReference"
                                rootPath="/content/dam/silversea-com"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser" />
                            <color
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Color"
                                name="./color">
                                <items jcr:primaryType="nt:unstructured">
                                    <gray
                                        jcr:primaryType="nt:unstructured"
                                        text="gray"
                                        value="gray" />
                                    <red
                                        jcr:primaryType="nt:unstructured"
                                        text="red"
                                        value="red" />
                                    <black
                                        jcr:primaryType="nt:unstructured"
                                        text="black"
                                        value="default" />
                                    <white
                                        jcr:primaryType="nt:unstructured"
                                        text="white"
                                        value="white" />
                                </items>
                            </color>
                            <size
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Size"
                                name="./size">
                                <items jcr:primaryType="nt:unstructured">
                                    <normal
                                        jcr:primaryType="nt:unstructured"
                                        text="normal"
                                        value="" />
                                    <small
                                        jcr:primaryType="nt:unstructured"
                                        text="small"
                                        value="btn-sm" />
                                    <large
                                        jcr:primaryType="nt:unstructured"
                                        text="large"
                                        value="btn-lg" />
                                </items>
                            </size>
                            <textalign
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Button align"
                                name="./textalign">
                                <items jcr:primaryType="nt:unstructured">
                                    <default
                                        jcr:primaryType="nt:unstructured"
                                        text="left"
                                        value="text-left" />
                                    <center
                                        jcr:primaryType="nt:unstructured"
                                        text="center"
                                        value="text-center" />
                                    <right
                                        jcr:primaryType="nt:unstructured"
                                        text="right"
                                        value="text-right" />
                                </items>
                            </textalign>
                            <analyticType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Analytic type"
                                name="./analyticType">
                                <items jcr:primaryType="nt:unstructured">
                                    <empty
                                        jcr:primaryType="nt:unstructured"
                                        text="Simple button"
                                        value="" />
                                    <raq
                                        jcr:primaryType="nt:unstructured"
                                        text="Quote request"
                                        value="clic-RAQ" />
                                    <bro
                                        jcr:primaryType="nt:unstructured"
                                        text="Brochure request"
                                        value="clic-BRO" />
                                    <rac
                                        jcr:primaryType="nt:unstructured"
                                        text="Call request"
                                        value="clic-RAC" />
                                    <sfo
                                        jcr:primaryType="nt:unstructured"
                                        text="Signup for offer"
                                        value="clic-SFO" />
                                </items>
                            </analyticType>
                        </items>
                    </column>
                </items>
            </button>
        </items>
    </content>
</jcr:root>