<?xml version="1.0" encoding="UTF-8"?>
<jcr:root
    xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <segment
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Segment"
                        cq:showOnCreate="{Boolean}false"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false" />
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <subtitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        allowBulkEdit="{Boolean}true"
                                        cq-msm-lockable="subTitle"
                                        fieldLabel="Sub Title"
                                        required="{Boolean}true"
                                        renderReadOnly="{Boolean}true"
                                        name="./subtitle" />
                                    <cruisereference
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                        allowBulkEdit="{Boolean}true"
                                        cq-msm-lockable="cruiseReference"
                                        fieldLabel="Cruise Reference"
                                        disabled="{Boolean}true"
                                        renderReadOnly="{Boolean}true"
                                        required="{Boolean}true"
                                        name="./cruiseReference"
                                        rootPath="/content/silversea-com" />
                                    <itinerarymap
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                        allowBulkEdit="{Boolean}true"
                                        cq-msm-lockable="mapReference"
                                        fieldLabel="Itinerary map"
                                        renderReadOnly="{Boolean}true"
                                        name="./mapReference"
                                        rootPath="/content/dam/silversea-com" />
                                    <itineraryfocusmap
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                        allowBulkEdit="{Boolean}true"
                                        cq-msm-lockable="focusedMapReference"
                                        fieldLabel="Itinerary focused map"
                                        renderReadOnly="{Boolean}true"
                                        name="./focusedMapReference"
                                        rootPath="/content/dam/silversea-com" />
                                </items>
                            </column>
                        </items>
                    </segment>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>